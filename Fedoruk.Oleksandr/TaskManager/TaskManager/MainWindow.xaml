<Window x:Class="TaskManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="540" Loaded="Window_Loaded_1">
    <Grid>
        <DataGrid Name="dGrid" 
                  AutoGenerateColumns="False"
                  ItemsSource="{Binding Path=ProcessesCollection}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name"              Binding="{Binding Name}"/>
                <DataGridTextColumn Header="Number of Threads" Binding="{Binding ThreadsCount}"/>
                <DataGridTextColumn Header="Working Set, Kb"   Binding="{Binding WorkingSetKbFormat}"/>
                <DataGridTextColumn Header="Working Set, Mb"   Binding="{Binding WorkingSetMbFormat}"/>
                <DataGridTextColumn Header="CPU"               Binding="{Binding CPUUssingFormat}"/>
            </DataGrid.Columns>
            
        </DataGrid>
        
    </Grid>
</Window>
